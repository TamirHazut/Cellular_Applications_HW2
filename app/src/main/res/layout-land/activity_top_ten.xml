<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/war_game_table_background"
    tools:context=".Activity_Top_Ten">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/black"
                android:text="@string/activity_top_ten_title"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_ten_RCV_players"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:layout_weight="1"
                android:weightSum="100"
                android:gravity="center|bottom">

                <Button
                    android:id="@+id/top_ten_BTN_close"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round_corners"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/white"
                    android:layout_weight="40"
                    android:layout_marginBottom="10dp"
                    android:text="@string/btn_activity_close"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:layout_weight="1"
                android:weightSum="100"
                android:gravity="center|bottom">
                <Button
                    android:id="@+id/top_ten_BTN_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round_corners"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/white"
                    android:layout_weight="40"
                    android:layout_marginBottom="10dp"
                    android:text="@string/btn_map"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>