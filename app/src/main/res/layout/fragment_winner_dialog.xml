<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".fragment.Fragment_Winner_Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/winner_TXT_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txt_winner_name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/winner_EDT_winner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_winner_name"
                android:inputType="textMultiLine|text"
                android:padding="@dimen/_8sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp"
            android:gravity="center|right">
            <Button
                android:id="@+id/winner_BTN_submit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/style_btn_round_corners"
                android:textColor="@color/white"
                android:text="@string/button_submit"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>