<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/war_game_table_background_portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:padding="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/black"
                android:text="@string/activity_top_ten_title"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_ten_RCV_players"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                style="@style/Theme.War.RecyclerViewItem"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:baselineAligned="false">
            <com.google.android.gms.maps.MapView
                android:id="@+id/top_ten_FML_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
<!--            <FrameLayout-->
<!--                android:id="@+id/top_ten_FML_map"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_alignParentBottom="true">-->
<!--            </FrameLayout>-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>